doctype html
html(lang="en")
  include includes/__head.pug
  body
    div.container.mt-5
      div.card.mb-3
        div.row.no-gutters
          div.col-md-4
            img(src=`${movie.poster}` alt=`${movie.title}`).card-img
          div.col-md-8
            div.card-body
              h1.card-title #{movie.title}
              p.card-text.font-weight-bold Director:
                span.font-weight-normal  #{movie.director}
              p.card-text.font-weight-bold Año:
                span.font-weight-normal  #{movie.year}
              p.card-text.font-weight-bold Genero:
                span.font-weight-normal  #{movie.genre}
              p.card-text.font-weight-bold Trama:
                span.font-weight-normal  #{movie.plot}
              p.card-text.font-weight-bold Producción:
                span.font-weight-normal  #{movie.production}
              p.card-text.font-weight-bold Idiomas:
                span.font-weight-normal  #{movie.language}
              p.card-text.font-weight-bold Premios:
                span.font-weight-normal  #{movie.awards}
              a(type="button" href="/").btn.btn-secondary Inicio