            div.col-sm-10
              input(type="text" name="title" placeholder="The matrix" style="min-width: 18rem; max-width: 25em;")
    div.container
      div.row
        div.card-deck
          each movie in data
            div.col
              div(data-id=`${movie.id}` style="max-width: 18rem;").card.border-info.mb-5
                h3.card-header #{movie.title}
                div.card-body
                  p.card-text #{movie.plot}
                div.card-footer
                  div.btn-group.btn-group-sm
                    a(type="button" id="details-btn" href=`/movies/${movie.id}`).btn.btn-outline-info Detalles
                    a(type="button" href=`/movies/${movie.id}/update` id="modal" data-id=`${movie.id}` data-toggle="modal" data-target="#updateModal").btn.btn-outline-info Modificar
                    a(type="button" href=`/movies/${movie.id}/delete`).btn.btn-outline-info Borrar

div(id="updateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true").modal.fade
